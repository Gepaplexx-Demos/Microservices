{
  "build": {
    "workspace-size": "2Gi",
    "language": {
      "name": "java",
      "version": "openjdk-11",
      "type": {
        "name": "maven",
        "version": "3.8.3"
      },
      "static-code-analysis": {
        "active": "true",
        "type": "sonarqube"
      }
    },
    "image": {
      "registry": "ghcr.io",
      "repository": "demo-microservice",
      "containerfile": "Containerfile"
    }
  },
  "integrationtest": {
    "active": "active",
    "type": "newman",
    "configuration": {
      "port": "8080",
      "collection": "postman.json",
      "colleciton-path": "postman"
    }
  },
  "vulnerability-scan": {
    "active": "true",
    "type": "trivy",
    "fail": {
      "active": "true",
      "severity": "CRITICAL"
    }
  }
}