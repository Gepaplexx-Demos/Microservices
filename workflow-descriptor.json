{
  "build": {
    "language": {
      "name": "java",
      "version": "openjdk-11"
    },
    "type": {
      "name": "maven",
      "version": "3.8.6",
      "configuration": {
        "args": "clean install",
        "config": "pom.xml",
        "config-path": "",
        "options": ""
      }
    },
    "static-code-analysis": {
      "active": "true",
      "type": "sonarqube"
    },
    "integration-test": {
      "active": "true",
      "type": "newman",
      "configuration": {
        "port": "8080",
        "collection": "postman.json",
        "collection-path": "postman"
      }
    }
  },
  "image": {
    "registry": "ghcr.io",
    "repository": "gepaplexx",
    "containerfile": "Containerfile"
  },
  "vulnerability-scan": {
    "active": "true",
    "type": "trivy",
    "configuration": {
      "report-severity": "LOW,MEDIUM,HIGH,CRITICAL",
      "fail": {
        "active": "false",
        "severity": "CRITICAL"
      }
    }
  }
}